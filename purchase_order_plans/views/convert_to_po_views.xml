<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_convert_to_po_form" model="ir.ui.view">
    <field name="name">convert.to.po.form</field>
    <field name="model">convert.to.po</field>
    <field name="arch" type="xml">
      <form string="Convert to Purchase Order">
        <sheet>
          <group>
            <field name="plan_line_id" readonly="1"/>
            <field name="proforma_number" required="1"/>
            <field name="invoice_file" filename="proforma_number" required="1"/>
          </group>
        </sheet>
        <footer>
          <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
          <button string="Cancel" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>